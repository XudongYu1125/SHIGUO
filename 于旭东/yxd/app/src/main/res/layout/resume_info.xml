<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/resume_info_toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="?attr/colorPrimaryDark"
            app:navigationIcon="@drawable/back">

            <TextView
                android:id="@+id/title_toolbar"
                android:background="@null"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp" />
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_below="@id/resume_info_toolbar"
            android:id="@+id/resume_linear1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="姓        名"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:textSize="30dp"
                android:id="@+id/resume_info_name"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="姓名"/>
        </LinearLayout>



        <LinearLayout
            android:layout_below="@id/resume_linear1"
            android:id="@+id/resume_linear2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="出生年月"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:textSize="30dp"
                android:id="@+id/resume_info_birthday"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="姓名"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/resume_linear2"
            android:id="@+id/resume_linear3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="毕业院校"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:id="@+id/resume_info_university"
                android:textSize="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="姓名"/>
        </LinearLayout>


        <LinearLayout
            android:layout_below="@id/resume_linear3"
            android:id="@+id/resume_linear4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="工作经历"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>
        </LinearLayout>
        <TextView
            android:layout_below="@id/resume_linear4"
            android:layout_width="match_parent"
            android:paddingLeft="70dp"
            android:textSize="18dp"
            android:text="撒大大的啊"
            android:minHeight="150dp"
            android:id="@+id/resume_info_exp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_below="@id/resume_info_exp"
            android:id="@+id/resume_linear5"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="工作经历"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>
        </LinearLayout>
        <TextView
            android:layout_below="@id/resume_linear5"
            android:layout_width="match_parent"
            android:paddingLeft="70dp"
            android:textSize="18dp"
            android:text="撒大大的啊"
            android:minHeight="150dp"
            android:id="@+id/resume_info_ability"
            android:layout_height="wrap_content"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/resume_info_ability"
            android:gravity="center"
            android:layout_height="100dp">
            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="立即申请"
                android:textColor="#ffffff"
                android:background="@drawable/button_background"
                android:id="@+id/submit_resume_submit" />
        </LinearLayout>















    </RelativeLayout>
</ScrollView>