<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/ms_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/defaulthead" />

        <TextView
            android:id="@+id/ms_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="23dp"
            android:text="一个阿呆"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ms_content"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="61dp"
            android:text="我是你哥哥[图片]"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ms_date"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginLeft="307dp"
            android:layout_marginTop="28dp"
            android:text="11-12 19:51"
            android:textColor="#000000" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#56000000" />


</LinearLayout>